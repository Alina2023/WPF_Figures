<Window x:Class="Lab1_Figures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Figures"
        mc:Ignorable="d"
        Title="Lab1 — Фигуры" Height="520" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Canvas для рисования -->
        <Canvas x:Name="Scene" Grid.Column="0" Background="White" Width="680" Height="400" />

        <!-- Панель управления -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top" >
            <Button x:Name="BtnRandomTriangle" Content="Случайный треугольник" Click="BtnRandomTriangle_Click" Margin="0,0,0,6"/>
            <Button x:Name="BtnRandomQuad" Content="Случайный четырёхугольник" Click="BtnRandomQuad_Click" Margin="0,0,0,6"/>
            <Button x:Name="BtnSquare" Content="Создать квадрат (100x100)" Click="BtnSquare_Click" Margin="0,0,0,6"/>
            <Separator Margin="0,6"/>
            <TextBlock Text="Перемещение:" FontWeight="Bold"/>
            <WrapPanel>
                <Button Content="←" Click="MoveLeft_Click" Width="40" Margin="4"/>
                <Button Content="→" Click="MoveRight_Click" Width="40" Margin="4"/>
                <Button Content="↑" Click="MoveUp_Click" Width="40" Margin="4"/>
                <Button Content="↓" Click="MoveDown_Click" Width="40" Margin="4"/>
            </WrapPanel>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="0,8,0,6"/>
            <Button Content="Сохранить скриншот" Click="BtnSaveScreenshot_Click" Margin="0,0,0,6"/>
        </StackPanel>
    </Grid>
</Window>
